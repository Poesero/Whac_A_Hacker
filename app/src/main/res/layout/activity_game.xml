<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cat_yelling_meme"
    tools:context=".GameActivity">


    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="364dp"
        android:background="@drawable/dial"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="ExtraText">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <Button
                android:id="@+id/btn_1"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="45pt"
                android:layout_height="33pt"
                android:layout_marginTop="4pt"
                android:onClick="btnClick" />

            <Button
                android:id="@+id/btn_2"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="45pt"
                android:layout_height="33pt"
                android:layout_marginHorizontal="6pt"
                android:layout_marginTop="4pt"
                android:onClick="btnClick" />

            <Button
                android:id="@+id/btn_3"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="45pt"
                android:layout_height="33pt"
                android:layout_marginTop="4pt"
                android:onClick="btnClick" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <Button
                android:id="@+id/btn_4"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="45pt"
                android:layout_height="33pt"
                android:onClick="btnClick" />

            <Button
                android:id="@+id/btn_5"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="45pt"
                android:layout_height="33pt"
                android:layout_marginHorizontal="6pt"
                android:onClick="btnClick" />

            <Button
                android:id="@+id/btn_6"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="45pt"
                android:layout_height="33pt"
                android:onClick="btnClick" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <Button

                android:id="@+id/btn_7"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="45pt"
                android:layout_height="33pt"
                android:onClick="btnClick" />

            <Button
                android:id="@+id/btn_8"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="45pt"
                android:layout_height="33pt"
                android:layout_marginHorizontal="6pt"
                android:onClick="btnClick" />

            <Button
                android:id="@+id/btn_9"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="45pt"
                android:layout_height="33pt"
                android:onClick="btnClick" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <Button
                android:id="@+id/btn_0"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="45pt"
                android:layout_height="33pt"
                android:layout_marginBottom="1pt"
                android:onClick="btnClick" />
        </TableRow>
    </TableLayout>

    <TableRow
        android:id="@+id/display"
        android:layout_width="300dp"
        android:layout_height="91dp"
        android:layout_marginBottom="96dp"
        android:background="@color/black"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="parent">


        <ImageView
            android:id="@+id/Position_1"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="3dp"
            android:layout_marginVertical="3dp"
            android:background="@drawable/empty_cell"
            android:src="@drawable/empty_image" />

        <ImageView
            android:id="@+id/Position_2"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="3dp"
            android:layout_marginVertical="3dp"
            android:background="@drawable/empty_cell"
            android:src="@drawable/empty_image" />

        <ImageView
            android:id="@+id/Position_3"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="3dp"
            android:layout_marginVertical="3dp"
            android:background="@drawable/empty_cell"
            android:src="@drawable/empty_image" />

        <ImageView
            android:id="@+id/Position_4"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="3dp"
            android:layout_marginVertical="3dp"
            android:background="@drawable/empty_cell"
            android:src="@drawable/empty_image" />
    </TableRow>
</androidx.constraintlayout.widget.ConstraintLayout>